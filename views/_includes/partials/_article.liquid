<article>
    <h2 class="title">
        <a href="/blog/{{ post.post_id | slugify }}.html">{{ post.title }}</a>
    </h2>
    <h3 class="subtitle">{{ post.subtitle }}</h3>
    <p class="date-posted">{{ post.date }}</p>
    <figure>
        <img src="{{ post.feature_image}}" />
        <figcaption>{{ post.feature_image_caption }}</figcaption>
    </figure>
    <div>{{ post.content }}</div>
    <div class="tags">
        tags:
        <ul class="commas">
            {% for tag in post.tags %}
                <li>
                    <a href="/tags/{{ tag | slugify }}.html">{{ tag }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <button
        class="share-button"
        data-id="{{ post.post_id | slugify }}"
        onclick="copyLink(event)">
        share <img src="/assets/icons8-share-24.png" alt="" />
    </button>
</article>